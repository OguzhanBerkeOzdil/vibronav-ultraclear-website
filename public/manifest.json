{
  "_meta": {
    "file": "manifest.json",
    "purpose": "Data file for the VibroNav/UltraClear project",
    "author": "Oğuzhan Berke Özdil",
    "lastEdit": "27 January 2025"
  },
  "name": "VibroNav & UltraClear Research",
  "short_name": "VibroNav Research",
  "description": "Advanced acoustic engineering and signal processing research for medical technology",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": [
    "education",
    "research",
    "medical",
    "technology"
  ],
  "icons": [
    {
      "src": "./assets/images/logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "./assets/images/logo.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/assets/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Home page on desktop"
    },
    {
      "src": "/assets/screenshots/mobile-home.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Home page on mobile"
    }
  ],
  "shortcuts": [
    {
      "name": "Projects",
      "short_name": "Projects",
      "description": "View research projects",
      "url": "/#projects",
      "icons": [
        {
          "src": "/assets/icons/shortcut-projects.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Publications",
      "short_name": "Publications",
      "description": "Browse research publications",
      "url": "/publications",
      "icons": [
        {
          "src": "/assets/icons/shortcut-publications.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Team",
      "short_name": "Team",
      "description": "Meet our research team",
      "url": "/team",
      "icons": [
        {
          "src": "/assets/icons/shortcut-team.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Contact",
      "short_name": "Contact",
      "description": "Get in touch with us",
      "url": "/contact",
      "icons": [
        {
          "src": "/assets/icons/shortcut-contact.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "file_handlers": [
    {
      "action": "/publications",
      "accept": {
        "application/pdf": [
          ".pdf"
        ],
        "text/plain": [
          ".bib",
          ".txt"
        ]
      }
    }
  ]
}